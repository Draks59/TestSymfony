{% extends "base.html.twig" %}

{% block title %}Listes des {{ category.name }}{% endblock %}

{% block body %}
    <div class="container">
        <section class="row">
            <div class="col-12">
                <h1>Liste des produits de la catégorie {{ category.name }}</h1>
            </div>
            {% for product in products.data %}
                 <div class="col-lg-3 col-md-6 col-sm-6 col-12 mb-3">
                    <article class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title">{{ product.name }}</h2>
                            <p class="card-text">{{ product.description }}</p>
                            <a class="btn btn-primary mb-3" href="{{ path('products_details', {"slug": product.slug}) }}">Voir les détails</a>
                            {% if product.stock > 0 %}
                            <a href="#" class="btn btn-success mb-3">Ajouter au panier</a>
                            {% else %}
                                <p class="text-danger">Temporairement en rupture de stock</p>
                            {% endif %}
                        </div>
                    </article>
                 </div>
            {% endfor %}
            {% set path = 'categories_list' %}
            {% set slug = category.slug %}
            {% set pages = products.pages %}
            {% set currentPage = products.page %}
            {% include "_partials/_pagination.html.twig" %}
        </section>
    </div>

{% endblock %}